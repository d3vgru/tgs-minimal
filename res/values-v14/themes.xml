<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="PPSPTheme" parent="@style/Theme.Sherlock.Light">
        <!-- Any customizations for PPSP app running on 4.0+ devices here -->
        <item name="android:textAppearance">@style/MyDefaultTextAppearance</item>  
        <item name="android:buttonStyle">@style/MyDefaultButtonAppearance</item>
        <item name="android:windowBackground">@color/my_custom_background_color</item>
        <item name="android:colorBackgroundCacheHint">@color/my_custom_background_color</item>
    </style>
    
    <style name="MyDefaultTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignLeft">@+id/RelativeLayout1</item>   
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/default_text_color</item>         
    </style>
       
    <style name="MyDefaultTextAppearance.Heading">
          <item name="android:textColor">@color/heading_text_color</item>
          <item name="android:textSize">14sp</item> 
          <item name="android:paddingTop">14dp</item>      
    </style>
    
    <style name="MyDefaultTextAppearance.InfoText">
          <item name="android:textColor">@color/info_text_color</item>
          <item name="android:textSize">12sp</item>      
          <item name="android:paddingTop">1dp</item>   
    </style>
    
    <style name="MyDefaultButtonAppearance" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignLeft">@+id/RelativeLayout1</item>           
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>